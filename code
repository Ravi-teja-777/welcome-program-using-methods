import java.util.Scanner;

public class git{
    static void method(){
        Scanner x = new Scanner(System.in);
        System.out.print("Enter Your name     : ");
        String c = x.nextLine();
        System.out.print("Enter time in am/pm : ");
        String a = x.next();
        String b = a.toUpperCase();
    
        if(b=="AM"){
            System.out.println("\nGood Morning "+c+" !");
            System.out.println("Welcome to git hub!");
        }else{
            System.out.println("\nGood Afternoon "+c+"!");
            System.out.println("Welcome to git hub !");
        }
        
    }
    public static void main(String args[]){
        method();
    }
}
